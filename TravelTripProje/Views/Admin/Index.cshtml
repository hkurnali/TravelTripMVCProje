@model List<TravelTripProje.Models.Siniflar.Blog>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Blog Listesi</h2>
<br/>
<table class="table table-bordered">

    <tr>
        <th>ID</th>
        <th>BAŞLIK</th>
        <th>SİL</th>
        <th>GÜNCELLE</th>
        <th>DETAYLAR</th>
    </tr>
    @foreach (var item in Model)
    {

    <tr>
        <th>@item.ID</th>
        <th>@item.Baslik</th>
        <th><a href="/Admin/BlogSil/@item.ID" class="btn btn-danger">Sil</a></th>
        <th><a href="/Admin/BlogGetir/@item.ID"class="btn btn-info">Güncelle</a></th>
        <th><a href="#" class="btn btn-light">Detaylar</a></th>
        
    </tr>
    }
</table>
<a href="/Admin/YeniBlog" class="btn btn-primary">Yeni Blog</a>

